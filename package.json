{
  "name": "claude-lens",
  "version": "0.1.2",
  "description": "Local observability dashboard for Claude & AI developer tooling",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"node server/index.js\" \"vite\"",
    "dev:server": "node server/index.js",
    "dev:client": "vite",
    "build": "vite build",
    "serve": "node server/index.js --production",
    "electron:dev": "npm run build && electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-builder --dir"
  },
  "bin": {
    "claude-lens": "./bin/cli.js"
  },
  "keywords": [
    "claude",
    "ai",
    "developer-tools",
    "observability",
    "mcp",
    "dashboard"
  ],
  "author": "The Night Project",
  "license": "MIT",
  "dependencies": {
    "@tailwindcss/postcss": "^4.2.1",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.27",
    "concurrently": "^9.2.1",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "postcss": "^8.5.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwindcss": "^4.2.1",
    "vite": "^7.3.1"
  },
  "devDependencies": {
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1"
  },
  "build": {
    "appId": "com.thenightproject.claude-lens",
    "productName": "Claude Lens",
    "directories": {
      "output": "dist-electron"
    },
    "asar": true,
    "asarUnpack": [
      "server/**",
      "dist/**",
      "**/*.node"
    ],
    "files": [
      "electron/**",
      "server/**",
      "dist/**",
      "node_modules/**",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        { "target": "dmg", "arch": ["arm64", "x64"] }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "notarize": true
    },
    "dmg": {
      "title": "Claude Lens ${version}"
    }
  }
}
